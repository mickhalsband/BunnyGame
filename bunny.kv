#:kivy 1.0.9

#:import SpriteSheet sprite.SpriteSheet

<BunnyGame>:
    bunny: bunny_id

    size: 800, 600

    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'resources/background_far.png'

    Label:
        font_size: 70
        pos_hint: {'center_x': 0.5 }
        text: "Bunny Game"

    Bunny:
        id: bunny_id
        pos: 0, 0

<Bunny>:
    sprite: sprite_id
	size_hint: None,None
    Sprite:
        id: sprite_id
        sheet: SpriteSheet(source='resources/rabbit_sprite.png', rows=1, cols=5)
