#:kivy 1.0.9

#:import Logger kivy.logger.Logger


<BunnyGame>:
    bunny: bunny_id

    size: 800, 600

    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'resources/background_far.png'

    Label:
        font_size: 70
        pos_hint: {'center_x': 0.5 }
        text: "Bunny Game"

    Bunny:
        id: bunny_id
        pos: 0, 0


<Sprite>:
    size_hint: None, None
    size: self.texture_size
    source: 'atlas://resources/%s/%s_%02d' % (self.atlas, self.direction, self.frame)

<Bunny>:
